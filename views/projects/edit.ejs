<%- include('../partials/header')%>
<div class="container">
    <h1 class="card-title">Edit Your Project !</h1>
    <hr>
    <div class="col-md-12 b">
        <form action="" method="POST">
            <div class="form-group row">
                <label for="editName" class="col-sm-2 col-form-label">Project Name</label>
                <div class="col-sm-10">
                    <input type="text" name="editName" class="form-control" id="editName" placeholder="Project Name"
                        value="<%= projectName.name%>">
                </div>
            </div>

            <div class="row b">
                <legend class="col-form-label col-sm-2 pt-0">Members</legend>
                <div class="col-sm-10">
                    <% members.forEach((item, index) => {%>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="editMembers" id="members<%= index + 1%>"
                            value="<%= item.userid%>" <%= memberData.includes(item.userid) ? 'checked' : '' %>>
                        <label class="form-check-label" for="members<%= index + 1%>">
                            <%= item.fullname %>
                        </label>
                    </div>
                    <%})%>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-outline-primary">Save</button>
                </div>

        </form>
    </div>
</div>
<%- include('../partials/footer')%>
