<%- include('../../partials/header')%>
<%- include('../../partials/sidebar')%>
<div class="container">
    <h1 class="card-title">Edit Member !</h1>
    <div class="name" style="background-color: rgb(157, 177, 177);">
        <h3 style="text-align: right;">
            <small class="text-black" style="padding: 30px;">#<%=projectid%> <%= project.name%></small>
        </h3>
    </div>
    <hr>
    <div class="col-md-12 b">

        <form method="POST">

            <div class="form-group row">
                <label for="nameMember" class="col-sm-2 col-form-label">
                    Members</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="nameMamber" name="nameMember"
                        value="<%=member.fullname%>" readonly>
                </div>
            </div>
            

            <div class="row">
                <legend class="col-form-label col-sm-2 pt-0">Position</legend>
                <div class="col-sm-10">
                    <div class="form-check">
                        <input id="manager" type="radio" name="inputposition" class="form-check-input"
                         value="Manager"<%= member.role == 'Manager' ? 'checked' : '' %>>
                        <label for="manager" class="form-check-label">
                            Manager
                        </label>
                    </div>

                    <div class="form-check">
                        <input id="softwareDeveloper" type="radio" name="inputposition" class="form-check-input"
                            value="Software Developer"<%= member.role == 'Software Developer' ? 'checked' : '' %>>
                        <label for="softwareDeveloper" class="form-check-label">
                            Software Developer
                        </label>
                    </div>

                    <div class="form-check">
                        <input id="qualityAssurance" type="radio" name="inputposition" class="form-check-input"
                            value="Quality Assurance"<%= member.role == 'Quality Assurance' ? 'checked' : '' %>>
                        <label for="qualityAssurance" class="form-check-label">
                            Quality Assurance
                        </label>
                    </div>

                </div>
            </div>


            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-outline-primary">Save</button>
                </div>

        </form>
    </div>
</div>
<%- include('../../partials/footer')%>