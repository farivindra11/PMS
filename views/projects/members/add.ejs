<%- include('../../partials/header')%>
<%- include('../../partials/sidebar')%>
<div class="container">
    <!-- filter -->
    <h1 class="card-title">Add New Member !</h1>
    <div class="name" style="background-color: rgb(157, 177, 177);">
        <h3 style="text-align: right;">
            <small class="text-black" style="padding: 30px;">#<%=projectid%> <%= project.name%></small>
        </h3>
    </div>
    <hr>
    <div class="col-md-12 b">

        <form method="POST">
            <div class="form-group row">
                <label for="inputBoolean" class="col-sm-2 col-form-label">
                    Members</label>
                <div class="col-sm-10">
                    <select class="custom-select" name="inputmember" required="">
                        <option>Choose the Member ...</option>
                        <% members.forEach(item=>{%>
                        <option value="<%=item.userid%>"><%=item.fullname%></option>
                        <%})%>
                    </select>
                </div>
            </div>

            <div class="row">
                <legend class="col-form-label col-sm-2 pt-0">Position</legend>
                <div class="col-sm-10">
                    <div class="form-check">
                        <input id="manager" type="radio" name="inputposition" class="form-check-input"
                         value="Manager">
                        <label for="manager" class="form-check-label">
                            Manager
                        </label>
                    </div>

                    <div class="form-check">
                        <input id="softwareDeveloper" type="radio" name="inputposition" class="form-check-input"
                            value="Software Developer">
                        <label for="softwareDeveloper" class="form-check-label">
                            Software Developer
                        </label>
                    </div>

                    <div class="form-check">
                        <input id="qualityAssurance" type="radio" name="inputposition" class="form-check-input"
                            value="Quality Assurance">
                        <label for="qualityAssurance" class="form-check-label">
                            Quality Assurance
                        </label>
                    </div>

                </div>
            </div>


            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-outline-primary">Save</button>
                </div>

        </form>
    </div>
</div>
<%- include('../../partials/footer')%>